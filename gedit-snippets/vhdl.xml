	if rst = '1' then
		state	<= IDLE_STATE;
	
	else
		case state is
		when IDLE_STATE =>
			if change = '1' then
				state	<= NEXT_STATE;
			end if;
		
		when NEXT_STATE =>
			state		<= IDLE_STATE;
		when others =>
		end case;
	end if;
end if;
end process;]]></text>
